{% extends 'base.html.twig' %}
{% block title %}Boutique MB - {{controller_name}}{% endblock %}

{% block contenu %}
<div class="row">
    <div class="col-md-3"><h3>Filtrer</h3>
        {{form(form)}}
    </div>
     <div class="col-md-9">
          <h1>Nos Produits</h1>
      <div class="row product-container ">
          {% for produit in produits %}
             <div class="col-md-4"> 
                  <div class="product-item text-center"> 
                       <a href="{{path('app_produit_voir', {'slug':produit.slug})}} "><img src="/produits/{{produit.ilustration}}" alt="{{produit.nom}} " class="img-fluid"></a>
                        <h5>{{produit.nom}} </h5>
                         <span class="product-subtitle">{{produit.subtitle}} </span><br/>
                         <span class="product-price">{{(produit.prix/100)|number_format(2, ',', '.')}}   F CFA </span>
              
             </div>  </div>
          {% endfor%}
      </div>
     </div>
</div>

   
{% endblock %}

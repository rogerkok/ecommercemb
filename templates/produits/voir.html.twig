{% extends 'base.html.twig' %}
{% block title %}Boutique MB - {{controller_name}}{% endblock %}

    

{% block contenu %}

      <div class="row">
             <div class="col-md-4"> 
            
                       <img src="/produits/{{produit.ilustration}}" alt="{{produit.nom}} " class="img-fluid">
                  
               </div> 
              
             <div class="col-md-8"> 
                 
                       <h3>{{produit.nom}} </h3>
                         <p>{{produit.subtitle}} </p>
                         <span class="product-single-price" style="font-size: 16px;">{{(produit.prix/100)|number_format(2, ',', '.')}}  F CFA </span>
                         <hr>
                         <p>{{produit.description}} </p>
                           <hr> 
                             <a class="btn btn-primary" href="{{path('app_panier_add', {'id':produit.id})}} ">  Ajouter au panier </a> 
                
             </div> 
         
      </div>
{% endblock %}
